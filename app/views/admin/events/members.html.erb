<h1><strong>MEMBER LIST</strong></h1>

<table class="table table-sm table-dark">
  <thead>
    <tr>
      <th scope="col">email</th>
      <th scope="col">name</th>
      <th scope="col">age</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do | user | %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', profile_user_path(user), class: 'btn btn-sm btn-success' %></td>
        <% if user_signed_in? && user.id == current_user.id %>
          <td><%= link_to 'Kick', kick_user_admin_event_path(:user_id => user.id), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', admin_event_path, class: 'btn btn-secondary' %>