<h1><strong>EVENT LIST</strong></h1>

<table class="table table-sm table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', admin_event_path(event), class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
        <% unless current_user.events.include?(event) %>
          <td><%= link_to 'Join', join_to_event_admin_user_path(event), method: :post, class: 'btn btn-sm btn-warning'%></td>
        <% else %>
          <td><%= link_to 'Leave', leave_event_admin_user_path(event), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to 'New Event', new_admin_event_path, class: 'btn btn-primary' %></div>
