<h1><strong>EVENT LIST</strong></h1>

<table class="table table-sm table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event_path(event), class: 'btn btn-sm btn-info' %></td>
        <% if user_signed_in? %>
        <% unless current_user.events.include?(event) %>
          <td><%= link_to 'Join', join_to_event_user_path(event), method: :post, class: 'btn btn-sm btn-warning'%></td>
        <% else %>
          <td><%= link_to 'Leave', leave_event_user_path(event), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>